{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% set menu_active = 'products' %}

{% block body %}
    <section class="section main-banner" id="product">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="left-images">
                        <img src="/assets/images/single-product-01.jpg" alt="">
                        <img src="/assets/images/single-product-02.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="right-content">
                        <h4>{{ product.name }}</h4>
                        <span class="price">{{ product.price }}{% if product.price|trim is not empty %}€{% else %}Gratuit{% endif %}</span>
{#                        <ul class="stars">#}
{#                            <li><i class="fa fa-star"></i></li>#}
{#                            <li><i class="fa fa-star"></i></li>#}
{#                            <li><i class="fa fa-star"></i></li>#}
{#                            <li><i class="fa fa-star"></i></li>#}
{#                            <li><i class="fa fa-star"></i></li>#}
{#                        </ul>#}
                        <span>{{ product.description }}</span>
{#                        <div class="quote">#}
{#                            <i class="fa fa-quote-left"></i><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiuski smod.</p>#}
{#                        </div>#}
                        <div class="quantity-content">
                            <div class="left-content">
                                <h6>Quantité</h6>
                            </div>
                            <div class="right-content">
                                <div class="quantity buttons_added">
                                    <input type="button" value="-" class="minus">
                                    <input type="number" id ="quantity" step="1" min="1" max="" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode="" onchange="onQuantityChange()">
                                    <input type="button" value="+" class="plus">
                                </div>
                            </div>
                        </div>
                        <div class="total">
                            <h4 id="totalPrice">Total: {{ product.price }}{% if product.price|trim is not empty %}€{% else %}Gratuit{% endif %}</h4>
                            <div class="main-border-button"><a id="addToCartButton" href="{{ path('cart_add', {productId: product.id, quantity: 1}) }}">Ajouter au panier</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block script %}
    <!-- Plugins -->
    <script src="/assets/js/quantity.js"></script>
    <script>
        function onQuantityChange() {
            var link = document.getElementById('addToCartButton').href;
            document.getElementById('addToCartButton').href = link.split('?quantity=')[0] + '?quantity=' + document.getElementById('quantity').value;
            document.getElementById('totalPrice').innerHTML = 'Total : ' + (document.getElementById('quantity').value * {{ product.price }}).toFixed(2) + '€'
        }
    </script>
{% endblock %}
